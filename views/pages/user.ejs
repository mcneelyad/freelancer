<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head"); -%>
</head>

<body class="container">

    <%- include("../partials/header"); -%>

    <main>
        <div class="jumbotron">
            <div class="container">
                <h2>My Account</h2>
                <br>

                <div class="col-xs-12">
                    <p><b>Basic Info</b>
                        <span class="pull-right">
                            <button type="button" class="btn btn-warning btn-lg" data-toggle="modal"
                                data-target="#modal" style="float: right; margin-top: -1rem;">
                                Edit
                                <i class="fas fa-pencil-alt"></i>
                            </button>
                        </span>
                    </p>
                </div>
                <hr>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>First Name</td>
                            <td><%= firstName %></td>
                        </tr>
                        <tr>
                            <td>Last Name</td>
                            <td><%= lastName %></td>
                        </tr>
                        <tr>
                            <td>Username</td>
                            <td><%= username %></td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td><%= email %></td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <p><b>Ideas I'm interested in</b></p>
                <div class="myInterests">
                    <% if (userInterests) { %>
                        <% for(var i=0; i < userInterests.length; i++) { %>
                            <% if (username == userInterests[i].username) { %> 
                                <ul class="list-group">
                                    <li class="list-group-item"><a href="/jobs/<%= userInterests[i].post_id %>"><%= userInterests[i].post_title %> </a></li>
                                </ul>
                            <% } %> 
                        <% } %>
                    <% } %>
                </div>
                <hr>
                <p><b>My Ideas</b></p>
                <div class="myIdeas">
                    <% if (posts) { %>
                        <% for(var i=0; i < posts.length; i++) { %>
                            <% if (username == posts[i].posted_by) { %> 
                                <ul class="list-group">
                                    <li class="list-group-item"><a href="/jobs/<%= posts[i]._id %>"><%= posts[i].title %> </a></li>
                                </ul>
                            <% } %> 
                        <% } %>
                    <% } %>
                </div>
            </div>

            <%- include("../partials/edit_user_details.ejs"); -%>
    </main>

    <footer>
        <%- include("../partials/footer"); -%>
    </footer>

</body>

</html>